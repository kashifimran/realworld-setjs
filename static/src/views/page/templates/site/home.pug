.home-page(data-template='site/home')
  .banner
    .container
      h1.logo-font conduit
      p A place to share your knowledge.
  .container.page
    .row
      .col-md-9
        .feed-toggle
          ul.nav.nav-pills.outline-active
            li.nav-item
              a.nav-link(data-href="my-feed" data-bind='tab:equal,my-feed|toggleClass,active') Your Feed
            li.nav-item
              a.nav-link(data-href="/" data-bind='tab:equal,home|toggleClass,active') Global Feed
            li.nav-item(data-if='tag')
              a.nav-link.active(data-href="?tag={tag}") \#{tag}
        .articles(data-list='{"list": "articles", "t": "common/article-preview", "alt": "common/article-preview/empty", "vars": {"v": "article"}}')

        nav
          ul.pagination(data-list='{"list": "pages", "vars": {"v": "page"}}')
            li.page-item(class='{o:page.cls}'): a.page-link(data-href='{page.link}') {page.index}

      .col-md-3
        .sidebar
          p Popular Tags
          .tag-list(data-list='{"list": "@tags", "vars": {"v": "tag"}}')
            a.tag-pill.tag-default(data-href="?tag={tag}") {tag}
